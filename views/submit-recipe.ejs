<div class="px-4 py-5 my-5 text-center">
  <h1 class="display-5 fw-bold">Submit Your Recipe</h1>
  <div class="col-lg-6 mx-auto">
    <p class="lead">
      Tired of having all your recipes scattered around? Save them all here...
    </p>
  </div>
</div>

<div class="row justify-content-center">
  <% if(infoSubmitObj !='' ) { %>
  <div class="col-8 alert alert-success" role="alert"><%= infoSubmitObj %></div>
  <% } %> <% if(infoErrorsObj !='' ) { %>
  <div class="col-8 alert alert-danger" role="alert">
    <%= infoErrorsObj[0].message %>
  </div>
  <% } %>

  <style>
    .required::after {
      content: " *";
      color: red;
    }
  </style>

  <div class="col-8">
    <form action="/submit-recipe" enctype="multipart/form-data" method="POST">
      <div class="row g-3">
        <div class="col-12">
          <label for="name" class="form-label required">Recipe Name</label>
          <input
            type="text"
            name="name"
            id="name"
            class="form-control"
            required
          />
        </div>

        <div class="col-12">
          <label for="calories" class="form-label required">Calories:</label>
          <input
            type="number"
            name="calories"
            id="calories"
            class="form-control"
            required
          />
        </div>

        <div class="col-12">
          <label for="protein" class="form-label required">Protein:</label>
          <input
            type="number"
            name="protein"
            id="protein"
            class="form-control"
            required
          />
        </div>

        <div class="col-12">
          <label for="description" class="form-label required"
            >Instructions:</label
          >
          <textarea
            name="description"
            id="description"
            class="form-control"
            cols="30"
            rows="4"
            required
          ></textarea>
        </div>

        <div class="col-12">
          <label for="name" class="form-label required">Ingredients</label
          ><br />
          <small>Example: Ice</small>
          <div class="ingredientList">
            <div class="ingredeintDiv mb-1">
              <input type="text" name="ingredients" class="form-control" />
            </div>
          </div>
        </div>

        <div class="col-12">
          <button
            type="button"
            class="btn btn-outline-dark"
            id="addIngredientsBtn"
            required
          >
            + Ingredient
          </button>
        </div>

        <div class="col-12">
          <label for="category" class="required">Select Category</label>
          <select
            class="form-select form-control"
            name="category"
            aria-label="Category"
            required
          >
            <option>Select Category</option>
            <option value="Thai">Thai</option>
            <option value="American">American</option>
            <option value="Chinese">Chinese</option>
            <option value="Mexican">Mexican</option>
            <option value="Indian">Indian</option>
            <option value="Japanese">Japanese</option>
            <option value="Desserts">Desserts</option>
            <option value="Korean">Korean</option>
            <option value="Vietnamese">Vietnamese</option>
            <option value="Other">Other</option>
          </select>
        </div>
        <div class="col-12">
          <label for="video" class="form-label">Video Link:</label>
          <input
            type="text"
            name="video"
            id="video"
            class="form-control"
            placeholder="https://www.youtube.com/watch?v=nHj09xU40bM&"
          />
        </div>

        <div class="col-12">
          <label for="image">Product Image</label>
          <input
            type="text"
            class="form-control"
            name="image"
            placeholder="https://i.ibb.co/qMthLjb/classic-cheese-pizza-FT-RECIPE0422-31a2c938fc2546c9a07b7011658cfd05.jpg"
          />
        </div>

        <div class="col-12 mb-5">
          <button type="submit" class="btn btn-dark">Submit Recipe</button>
        </div>
      </div>
    </form>
  </div>
</div>
